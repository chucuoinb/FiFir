<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/main_margin"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/test"
            />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/main_margin">

            <TextView
                android:id="@+id/status_name_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaa"
                android:textColor="@color/black"
                android:textSize="23dp"
                />

            <TextView
                android:id="@+id/status_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aa"
                android:textColor="@color/colorText"
                android:textSize="14dp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/status_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginRight="@dimen/main_margin"
        android:text="aa"
        android:textSize="20dp"
        android:layout_marginBottom="@dimen/main_margin"
        >
    </TextView>


    <include layout="@layout/space"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_top"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginTop="@dimen/padding_top"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/status_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/status_img_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/unlike"/>
            <TextView
                android:layout_marginLeft="@dimen/padding_top"
                android:id="@+id/status_count_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_like"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:id="@+id/status_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/status_img_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/comment"/>
            <TextView
                android:layout_marginLeft="@dimen/padding_top"
                android:id="@+id/status_count_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_comment"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>