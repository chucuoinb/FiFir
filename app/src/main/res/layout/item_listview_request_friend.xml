<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50pt"
    android:background="@drawable/listview_default"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5pt"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/request_friend_avatar"
            android:layout_width="40pt"
            android:layout_height="match_parent"
            android:background="@drawable/avatar"
            android:src="@drawable/test"
            />

        <TextView
            android:id="@+id/request_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2pt"
            android:text="aaa"
            android:textColor="@color/black"
            android:textSize="15pt"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/request_friend_bt_accept"
                android:layout_width="60pt"
                android:layout_height="15pt"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2pt"
                    android:layout_weight="1"
                    android:text="@string/accept"

                    android:textColor="@color/white"
                    android:textSize="8pt"/>

                <ImageView
                    android:layout_width="10pt"
                    android:layout_height="10pt"
                    android:layout_marginRight="2pt"
                    android:src="@drawable/accept"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/request_friend_bt_cancel"
                android:layout_width="60pt"
                android:layout_height="15pt"
                android:layout_marginTop="5pt"
                android:background="@drawable/button_cancel"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2pt"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:textSize="8pt"/>

                <ImageView
                    android:layout_width="10pt"
                    android:layout_height="10pt"
                    android:layout_marginRight="2pt"
                    android:src="@drawable/cancel"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>